{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "dialog:default",
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$HOME/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/**/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "tectonic",
          "cmd": "tectonic",
          "args": [
            {
              "validator": ".*"
            }
          ]
        }
      ]
    }
  ]
}